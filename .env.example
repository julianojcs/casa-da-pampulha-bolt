# MongoDB
MONGODB_URI=mongodb://localhost:27017/casa-da-pampulha

# NextAuth
NEXTAUTH_SECRET=your-super-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Email - Gmail (opção 1)
# Para usar Gmail, crie uma senha de app em: https://myaccount.google.com/apppasswords
GMAIL_SERVER_USER=seu-email@gmail.com
GMAIL_APP_PASSWORD=sua-senha-de-app

# Email - SMTP genérico (opção 2)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=seu-usuario
# SMTP_PASS=sua-senha

# Email - Remetente
EMAIL_FROM="Casa da Pampulha" <noreply@casadapampulha.com>

# Email do administrador (para receber mensagens de contato)
ADMIN_EMAIL=admin@casadapampulha.com

# Cloudinary (para upload de imagens)
CLOUDINARY_CLOUD_NAME=seu-cloud-name
CLOUDINARY_API_KEY=sua-api-key
CLOUDINARY_API_SECRET=sua-api-secret
